        android:supportsRtl="true"
        android:theme="@style/Theme.Tap2Eat"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Gemini"
            android:exported="true" />
        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:label="@string/title_activity_checkout"
            android:theme="@style/Theme.Tap2Eat" />
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <activity
            android:name=".History"
            android:exported="false" />
        <activity
            android:name=".tickPage"
            android:exported="false" />
        <activity
            android:name=".MainActivity2"
            android:exported="false" />
        <activity
            android:name=".MapsGoogle"
            android:exported="false" />
        <activity
            android:name=".Maps"
            android:exported="false" />
        <activity
            android:name=".Payment"
            android:exported="false" />
        <activity
            android:name=".StripePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".CheckoutPage"
            android:exported="false" />
        <activity
            android:name=".YourOrders"
            android:exported="false" />
        <activity
            android:name=".FoodPage"
            android:exported="false" />
        <activity
            android:name=".Details_Page"
            android:exported="false" />
        <activity
            android:name=".DetailsPage"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>